<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgPrecintado"
        android:src="@drawable/img_tecnica" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:text="Nombre Revision"
        android:id="@+id/tvNombrePrecintado"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imgPrecintado"
        android:layout_marginLeft="5dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="-"
        android:id="@+id/tvNumPrecinto"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tvNombrePrecintado"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>