<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fecha 1"
        android:id="@+id/tvCarreraObservacion"
        android:textSize="24sp"
        android:layout_margin="5dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_observacion1"
        android:layout_margin="5dp"
        android:padding="3dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Observacion"
            android:id="@+id/tvDrescipcionObservacion"
            android:textColor="@android:color/white"
            android:layout_toLeftOf="@+id/cbObservacionOK"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_checkbox_default"
            android:id="@+id/cbObservacionOK"
            android:layout_gravity="right"

            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:checked="false" />


    </RelativeLayout>

    TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="asdadadsadadadadsadasddasdadasddasdasdada"
        android:id="@+id/textView2"

        android:layout_toLeftOf="@+id/cbRevisionOk"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        />



</LinearLayout>